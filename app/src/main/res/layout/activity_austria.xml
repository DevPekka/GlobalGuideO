<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.devpekka.globalguide.Austria">

    <android.support.v7.widget.CardView
        style="?attr/selectableItemBackground"
        app:cardCornerRadius="6dp"
        app:cardPreventCornerOverlap="false"
        app:cardElevation="6dp"
        android:layout_margin="9dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageView
                android:id="@+id/austria"
                android:layout_width="match_parent"
                android:layout_height="122dp"
                android:scaleType="centerCrop"
                android:src="@drawable/austria" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="9dp"
                android:text="Creator:"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="9dp"
                android:text="Radix"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="13sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="9dp"
                android:text="Map Group:"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="9dp"
                android:text="Operation Hydra"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="13sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="9dp"
                android:text="Scenario"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="9dp"
                android:text="Bomb Defusal"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="13sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="9dp"
                android:text="Costum: CT GSG-9, T Phoenix Connection"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="9dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="9dp"
                android:text="Entity: de_austria"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</ScrollView>
