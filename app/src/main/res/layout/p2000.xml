<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="7sp"
    android:background="#e3ecf9"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.devpekka.globalguide.KindOfPistol">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                    app:cardCornerRadius="6sp"
                    app:cardElevation="6sp"
                    app:cardPreventCornerOverlap="true"
                    android:layout_width="match_parent"
                    android:layout_height="135dp">
                    <RelativeLayout
                        android:padding="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-condensed"
                            android:text="P2000"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="#52565b"
                            android:textSize="30sp"
                            android:textStyle="bold"
                            android:typeface="normal"/>

                        <ImageView
                            android:layout_width="114sp"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:src="@drawable/p2000_images"
                            android:layout_below="@+id/textView2"
                            android:layout_centerHorizontal="true"/>

                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_marginTop="10sp"
                        app:cardCornerRadius="1dp"
                        app:cardPreventCornerOverlap="false"
                        app:cardElevation="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:padding="10sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:text="Gun Info"
                                android:textAllCaps="true"
                                android:textSize="20sp"
                                />

                            <ImageView
                                android:src="@drawable/ic_info_black_24dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/imageView5"/>

                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                    <LinearLayout
                        android:background="#fff"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.9"
                            android:padding="10sp"
                            android:text="Origin:"
                            android:textColor="#52565b"
                            android:textSize="17sp"
                            android:textStyle="normal"/>

                        <TextView
                            android:textColor="#52565b"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:id="@+id/textView3"
                            android:layout_width="154dp"
                            android:layout_height="wrap_content"
                            android:padding="10sp"
                            android:layout_weight="0.1"
                            android:textAlignment="textEnd"
                            android:text="GERMANY"/>

                    </LinearLayout>
                    <LinearLayout
                        android:background="#fff"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/tx5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.9"
                            android:text="Price:"
                            android:textColor="#52565b"
                            android:textSize="17sp"
                            android:padding="10sp"
                            android:textStyle="normal"/>

                        <TextView
                            android:textColor="#52565b"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:id="@+id/tx3"
                            android:layout_width="154dp"
                            android:layout_height="wrap_content"
                            android:padding="10sp"
                            android:layout_weight="0.1"
                            android:textAlignment="textEnd"
                            android:text="$200"/>

                    </LinearLayout>
                    <LinearLayout
                        android:background="#fff"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.9"
                            android:text="Reload Time:"
                            android:textColor="#52565b"
                            android:textSize="17sp"
                            android:padding="10sp"
                            android:textStyle="normal"/>

                        <TextView
                            android:textColor="#52565b"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:layout_width="154dp"
                            android:layout_height="wrap_content"
                            android:padding="10sp"
                            android:layout_weight="0.1"
                            android:textAlignment="textEnd"
                            android:text="2.2 Seconds"/>

                    </LinearLayout>
                    <LinearLayout
                        android:background="#fff"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.9"
                            android:text="Kill Reward:"
                            android:textColor="#52565b"
                            android:textSize="17sp"
                            android:padding="10sp"
                            android:textStyle="normal"/>

                        <TextView
                            android:textColor="#52565b"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:layout_width="154dp"
                            android:layout_height="wrap_content"
                            android:padding="10sp"
                            android:layout_marginRight="5sp"
                            android:layout_weight="0.17"
                            android:textAlignment="textEnd"
                            android:text="$150 (Casual) $300 (Competitive)"/>

                    </LinearLayout>
                    <LinearLayout
                        android:background="#fff"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.9"
                            android:text="Caliber:"
                            android:textColor="#52565b"
                            android:textSize="17sp"
                            android:padding="10sp"
                            android:textStyle="normal"/>

                        <TextView
                            android:textColor="#52565b"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:layout_width="154dp"
                            android:layout_height="wrap_content"
                            android:padding="10sp"
                            android:layout_marginRight="5sp"
                            android:layout_weight="0.17"
                            android:textAlignment="textEnd"
                            android:text=".357"/>

                    </LinearLayout>
                    <LinearLayout
                        android:background="#fff"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.9"
                            android:text="Used by:"
                            android:textColor="#52565b"
                            android:textSize="17sp"
                            android:padding="10sp"
                            android:textStyle="normal"/>

                        <TextView
                            android:textColor="#52565b"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:layout_width="154dp"
                            android:layout_height="wrap_content"
                            android:padding="10sp"
                            android:layout_marginRight="5sp"
                            android:layout_weight="0.17"
                            android:textAlignment="textEnd"
                            android:text="Counter Terrorist"/>

                    </LinearLayout>
                    <LinearLayout
                        android:background="#fff"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.9"
                            android:text="Accurate Range:"
                            android:textColor="#52565b"
                            android:textSize="17sp"
                            android:padding="10sp"
                            android:textStyle="normal"/>

                        <TextView
                            android:textColor="#52565b"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:layout_width="154dp"
                            android:layout_height="wrap_content"
                            android:padding="10sp"
                            android:layout_marginRight="5sp"
                            android:layout_weight="0.17"
                            android:textAlignment="textEnd"
                            android:text="22m"/>

                    </LinearLayout>
                    <LinearLayout
                        android:background="#fff"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.9"
                            android:text="Entity:"
                            android:textColor="#52565b"
                            android:textSize="17sp"
                            android:padding="10sp"
                            android:textStyle="normal"/>

                        <TextView
                            android:textColor="#52565b"
                            android:textSize="14sp"
                            android:textStyle="italic"
                            android:layout_width="154dp"
                            android:layout_height="wrap_content"
                            android:padding="10sp"
                            android:layout_marginRight="5sp"
                            android:layout_weight="0.17"
                            android:textAlignment="textEnd"
                            android:text="weapon_hkp2000"/>

                    </LinearLayout>
                    <LinearLayout
                        android:background="#fff"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.9"
                            android:text="Damage:"
                            android:textColor="#52565b"
                            android:textSize="17sp"
                            android:padding="10sp"
                            android:textStyle="normal"/>

                        <TextView
                            android:textColor="#52565b"
                            android:textSize="14sp"
                            android:textStyle="italic"
                            android:layout_width="154dp"
                            android:layout_height="wrap_content"
                            android:padding="10sp"
                            android:layout_marginRight="5sp"
                            android:layout_weight="0.17"
                            android:textAlignment="textEnd"
                            android:text="35"/>

                    </LinearLayout>
                    <LinearLayout
                        android:background="#fff"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.9"
                            android:text="Muzzle velocity:"
                            android:textColor="#52565b"
                            android:textSize="17sp"
                            android:padding="10sp"
                            android:textStyle="normal"/>

                        <TextView
                            android:textColor="#52565b"
                            android:textSize="14sp"
                            android:textStyle="italic"
                            android:layout_width="154dp"
                            android:layout_height="wrap_content"
                            android:padding="10sp"
                            android:layout_marginRight="5sp"
                            android:layout_weight="0.17"
                            android:textAlignment="textEnd"
                            android:text="1165 ft/s"/>

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

    </LinearLayout>


</LinearLayout>
